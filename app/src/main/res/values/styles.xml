<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewHeaderStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_extra_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_extra_small</item>
    </style>

    <style name="TextViewDescriptionStyle">
        <item name="android:layout_marginStart">@dimen/margin_extra_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_extra_small</item>
        <item name="android:maxLength">200</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewCommonStyle">
        <item name="android:layout_margin">@dimen/margin_extra_small</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


</resources>